apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: internal-ingress
  namespace: dev-system
  annotations:
    alb.ingress.kubernetes.io/scheme: internal
    alb.ingress.kubernetes.io/target-type: ip
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP":80}]'
    alb.ingress.kubernetes.io/subnets: {{ private_subnet_ids.value | join(',') }} # Internal ALB를 배치할 Private Subnet ID
spec:
  ingressClassName: alb
  rules:
    - host: ssr-portainer.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: portainer
                port:
                  number: 80
    - host: ssr-airflow.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: airflow-service-webserver
                port:
                  number: 80
    - host: ssr-kafka.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: kafka-ui-svc
                port:
                  number: 80
    - host: ssr-kibana.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: kibana-svc
                port:
                  number: 80
    - host: ssr-adminer.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: adminer
                port:
                  number: 80
    - host: ssr-grafana.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: monitoring-grafana
                port:
                  number: 80
    - host: ssr-prometheus.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: monitoring-kube-prometheus-prometheus
                port:
                  number: 80
    - host: ssr-alertmanager.kro.kr
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: monitoring-kube-prometheus-alertmanager
                port:
                  number: 80